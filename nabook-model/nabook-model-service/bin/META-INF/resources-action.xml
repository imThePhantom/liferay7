<?xml version="1.0"?>
<!DOCTYPE resource-action-mapping PUBLIC "-//Liferay//DTD Resource Action Mapping 7.0.0//EN" 
		"http://www.liferay.com/dtd/liferay-resource-action-mapping_7_0_0.dtd">

<resource-action-mapping>
	<model-resource>
		<model-name>com.nabook</model-name>
		<portlet-ref>
			<portlet-name>NABookAdmin</portlet-name>
			<portlet-name>NABook</portlet-name>
		</portlet-ref>
		<root>true</root>
		<weight>1</weight>
		<permissions>
			<supports>
				<action-key>VIEW</action-key>
				<action-key>PERMISSIONS</action-key>
				<action-key>ADD_AUTHOR</action-key>
				<action-key>ADD_BOOK</action-key>
				<action-key>ADD_BOOKSTORE</action-key>
				<action-key>MANAGE_STOCK</action-key>
				<action-key>ADD_CART</action-key>
				<action-key>ADD_ORDER</action-key>
				<action-key>ADD_ADDRESS</action-key>
			</supports>
			<site-member-defaults>
				<action-key>PERMISSIONS</action-key>
				<action-key>VIEW</action-key>
			</site-member-defaults>
			<guest-defaults>
				<action-key>VIEW</action-key>
			</guest-defaults>
			<guest-unsupported>
				<action-key>ADD_BOOKSTORE</action-key>
				<action-key>PERMISSIONS</action-key>
			</guest-unsupported>
		</permissions>
	</model-resource>
	
	<model-resource>
		<model-name>com.nabook.model.Author</model-name>
		<portlet-ref>
			<portlet-name>NABookAdmin</portlet-name>
			<portlet-name>NABook</portlet-name>
		</portlet-ref>
		<weight>2</weight>
		<permissions>
			<supports>
				<action-key>VIEW</action-key>
				<action-key>UPDATE</action-key>
				<action-key>PERMISSIONS</action-key>
				<action-key>DELETE</action-key>
			</supports>
			<site-member-defaults>
				<action-key>VIEW</action-key>
				<action-key>UPDATE</action-key>
			</site-member-defaults>
			<guest-defaults>
				<action-key>VIEW</action-key>
			</guest-defaults>
			<guest-unsupported>
				<action-key>UPDATE</action-key>
				<action-key>PERMISSIONS</action-key>
				<action-key>DELETE</action-key>
			</guest-unsupported>
		</permissions>
	</model-resource>
	<model-resource>
		<model-name>com.nabook.model.Book</model-name>
		<portlet-ref>
			<portlet-name>NABookAdmin</portlet-name>
			<portlet-name>NABook</portlet-name>
		</portlet-ref>
		<weight>2</weight>
		<permissions>
			<supports>
				<action-key>VIEW</action-key>
				<action-key>UPDATE</action-key>
				<action-key>PERMISSIONS</action-key>
				<action-key>DELETE</action-key>
			</supports>
			<site-member-defaults>
				<action-key>UPDATE</action-key>
				<action-key>VIEW</action-key>
			</site-member-defaults>
			<guest-defaults>
				<action-key>VIEW</action-key>
			</guest-defaults>
			<guest-unsupported>
				<action-key>DELETE</action-key>
				<action-key>PERMISSONS</action-key>
				<action-key>UPDATE</action-key>
			</guest-unsupported>
		</permissions>
	</model-resource>

	<model-resource>
		<model-name>com.nabook.model.Bookstore</model-name>
		<portlet-ref>
			<portlet-name>NABookAdmin</portlet-name>
			<portlet-name>NABook</portlet-name>
		</portlet-ref>
		<weight>2</weight>
		<permissions>
			<supports>
				<action-key>VIEW</action-key>
				<action-key>UPDATE</action-key>
				<action-key>PERMISSIONS</action-key>
				<action-key>DELETE</action-key>
			</supports>
			<site-member-defaults>
				<action-key>UPDATE</action-key>
				<action-key>VIEW</action-key>
			</site-member-defaults>
			<guest-defaults>
				<action-key>VIEW</action-key>
			</guest-defaults>
			<guest-unsupported>
				<action-key>DELETE</action-key>
				<action-key>PERMISSONS</action-key>
				<action-key>UPDATE</action-key>
			</guest-unsupported>
		</permissions>
	</model-resource>
</resource-action-mapping>